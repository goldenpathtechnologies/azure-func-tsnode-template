{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules/*",
    "dist/*",
    "test/*",
    "jest.*.ts",
    "**/*.test.ts",
    "**/*.e2e-test.ts"
  ]
}
